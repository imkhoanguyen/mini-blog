@model LoginVM

<div class="card mx-auto mt-5" style="max-width: 500px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="card-header bg-primary">
        <p class="text-center h1 fw-bold my-3 text-white">Log in</p>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="text-danger mb-2" asp-validation-summary="All"></div>

            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                <div class="form-outline flex-fill mb-0">
                    <input class="form-control" asp-for="UserName" placeholder="Username" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                <div class="form-outline flex-fill mb-0">
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 d-flex ">
                <div class="d-flex gap-2 align-items-center justify-content-center">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                    <label class="form-label mb-0" asp-for="RememberMe">Remember Me</label>
                </div>
                <div class="ms-auto "><a asp-controller="account" asp-action="register">Register as a new user</a></div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>

            <div class="d-flex justify-content-between pt-3">
               
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}